{
    "manifest_version": 3,
    "name": "Canvas Assignment Page Inject",
    "version": "1.0",
    "description": "This is a test to see if I can get an extension showing on the assignment page in canvas",
    "content_scripts": [
        {
            "matches": ["*://*.instructure.com/courses/*/assignments*", "*://*.instructure.com/courses/*/quizzes*"],
            "js": ["bundle.js"],
            "css": ["content.css"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["bell-curve.webp"],
            "matches": ["https://*.instructure.com/*"]
        }
    ],
    "permissions": []
}