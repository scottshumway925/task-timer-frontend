{
  "manifest_version": 3,
  "name": "Canvas Timer",
  "version": "0.0.0.1",
  "description": "This extension helps students who use canvas to better estimate the amount of time that their assignment will be taking.",
  "icons": {
    "16": "icons/icon16.jpeg",
    "32": "icons/icon32.jpeg",
    "48": "icons/icon48.jpeg",
    "128": "icons/icon128.jpeg"
  },

  "content_scripts": [
    {
      "matches": ["*://*.instructure.com/courses/*/assignments/*", "*://*.instructure.com/courses/*/quizzes/*"],
      "js": ["bundle.js"],
      "css": ["content.css"]
    }
  ],
  "options_page": "settings/settings.html",
  "permissions": ["storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://us-central1-assignment-time.cloudfunctions.net/*",
    "*://*.instructure.com/*"
  ],
  "action": {
    "default_popup": "settings/popup.html",
    "default_title": "Canvas Timer Settings"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  }
}
